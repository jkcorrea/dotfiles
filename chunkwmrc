/*
Charitably.Yours. config for Kwm
*/

// Set default values for screen padding
kwmc config padding 20 20 20 20

// Set default values for container gaps
kwmc config gap 15 15

// Default tiling mode for Kwm (bsp | monocle | float)
kwmc config tiling bsp

// Let Kwm listen for hotkeys
// kwmc config hotkeys on

// Automatically float windows that fail to resize
kwmc config float-non-resizable on

// Automatically resize the window to its container
kwmc config lock-to-container on

// Allow manual window dragging
// kwmc config mouse-drag on
// kwmc config mouse-drag mod mod1

// Set focus-follows-mouse-mode to autoraise
kwmc config focus-follows-mouse on

/* Focus-follows-mouse is temporarily disabled when
   a floating window has focus */
kwmc config standby-on-float on

/* Center window when made floating */
kwmc config center-on-float on

/* The mouse will automatically move to the center
   of the focused window */
kwmc config mouse-follows-focus on

// Allow window focus to wrap-around
kwmc config cycle-focus on

// Set default container split-ratio
kwmc config split-ratio 0.333

// New splits become the left leaf-node
kwmc config spawn right

//Set rules for Apps
kwmc rule owner="iTerm2" properties={role="AXDialog"}
kwmc rule owner="Steam" properties={float="true"}
kwmc rule owner="Photoshop" properties={float="true"} 
kwmc rule owner="Mail" properties={display="2"}
kwmc rule owner="Calendar" properties={display="2"}
kwmc rule owner="Visual Studio Code - Insiders" properties={float="true"}

// Enable border for focused window
kwmc config border focused on
kwmc config border focused size 3
kwmc config border focused color 0xFFAE81FF
kwmc config border focused radius 8

// Quit Kwm
// kwmc bindsym cmd+alt+ctrl-q quit

// Set Space Tiling Mode To BSP
// kwmc bindsym modB-a space -t bsp

// Set Space Tiling Mode To Monocle
// kwmc bindsym modB-s space -t monocle

// Set Space Tiling Mode To Floating
// kwmc bindsym modB-d space -t float

// Rotate Window-Tree By 90degrees (Clockwise)
// kwmc bindsym modB-r tree rotate 90

// Modify Container
// kwmc bindsym modB-h window -c split-mode toggle
// kwmc bindsym modB-k window -c reduce 0.05
// kwmc bindsym modB-j window -c expand 0.05
// kwmc bindsym modB-l window -c type toggle

// Give Focus To Window
// kwmc bindsym mod2-h window -f west
// kwmc bindsym mod2-l window -f east
// kwmc bindsym mod2-j window -f south
// kwmc bindsym mod2-k window -f north

// Give Focus To Screen
// kwmc bindsym mod2-1 display -f 0
// kwmc bindsym mod2-2 display -f 1
// kwmc bindsym mod2-3 display -f 2

// Swap Focused Window
// kwmc bindsym mod1-h window -s west
// kwmc bindsym mod1-j window -s south
// kwmc bindsym mod1-k window -s north
// kwmc bindsym mod1-l window -s east
// kwmc bindsym mod1-m window -s mark

// Move Focused Window And Reinsert In Direction
// kwmc bindsym modM-k window -m north
// kwmc bindsym modM-l window -m east
// kwmc bindsym modM-j window -m south
// kwmc bindsym modM-h window -m west

// Move Focused Window To Space
// kwmc bindsym mod1-left window -m space left
// kwmc bindsym mod1-right window -m space right

// Move Focused Window To Screen
// kwmc bindsym mod1-1 window -m display 0
// kwmc bindsym mod1-2 window -m display 1
// kwmc bindsym mod1-3 window -m display 2
